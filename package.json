    "less": "^4.2.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vue-tsc": "^2.0.28"
  },
  "engines": {
    "node": ">=18.x"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx,json}": "eslint --fix"
